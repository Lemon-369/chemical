<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hy.chemical.mapper.InventoryMapper">
    <!--定义返回值类型，通过resultMap的id引用-->
    <resultMap id="inventory" type="Inventory">
        <id property="kid" column="kid"/>
    </resultMap>
    <!-- 添加库存  -->
    <update id="addition" parameterType="InventoryVo">
        update inventory set amount=amount+${inventoryVo.amount}
        where kid=${inventoryVo.kid}
    </update>
    <!-- 减少库存  -->
    <update id="subtract" parameterType="InventoryVo">
        update inventory set amount=amount-${inventoryVo.amount}
        where kid=${inventoryVo.kid}
    </update>


</mapper>